{
	"name": "schnipsel",
	"version": "0.0.0",
	"description": "Write snippets once, render them for many IDEs",
	"keywords": [
		"snippets",
		"typescript",
		"sublime-text",
		"intellij",
		"vscode",
		"vim"
	],
	"repository": {
		"type": "git",
		"url": "ssh://git@github.com/prismicio-community/schnipsel.git"
	},
	"license": "Apache-2.0",
	"author": "Prismic <contact@prismic.io> (https://prismic.io)",
	"type": "module",
	"exports": {
		".": {
			"require": "./dist/index.cjs",
			"import": "./dist/index.js"
		},
		"./package.json": "./package.json"
	},
	"main": "dist/index.cjs",
	"module": "dist/index.js",
	"types": "dist/index.d.ts",
	"bin": {
		"schnipsel": "./bin/cli.mjs"
	},
	"files": [
		"bin",
		"dist",
		"src"
	],
	"scripts": {
		"build": "siroc build",
		"debug": "cross-env DEBUG=schnipsel* schnipsel",
		"dev": "siroc build --watch",
		"format": "prettier --write .",
		"lint": "eslint --ext .js,.ts .",
		"prepare": "npm run build",
		"release": "npm run test && standard-version && git push --follow-tags && npm run build && npm publish",
		"release:alpha": "npm run test && standard-version --release-as major --prerelease alpha && git push --follow-tags && npm run build && npm publish --tag alpha",
		"release:alpha:dry": "standard-version --release-as major --prerelease alpha --dry-run",
		"release:dry": "standard-version --dry-run",
		"size": "size-limit",
		"test": "npm run lint && npm run unit && npm run build",
		"unit": "vitest run --coverage",
		"unit:watch": "vitest watch"
	},
	"dependencies": {
		"c12": "0.2.5",
		"cac": "^6.7.12",
		"chalk": "^5.0.1",
		"chokidar": "3.5.3",
		"consola": "2.15.3",
		"debug": "^4.3.4",
		"detect-indent": "^7.0.0",
		"escape-html": "^1.0.3",
		"exit": "^0.1.2",
		"front-matter": "^4.0.2",
		"globby": "^13.1.1",
		"latest-version": "^6.0.0",
		"semver": "^7.3.6"
	},
	"devDependencies": {
		"@size-limit/preset-small-lib": "^7.0.8",
		"@types/escape-html": "1.0.1",
		"@types/exit": "0.1.31",
		"@types/semver": "7.3.9",
		"@typescript-eslint/eslint-plugin": "^5.18.0",
		"@typescript-eslint/parser": "^5.18.0",
		"c8": "^7.11.0",
		"cross-env": "7.0.3",
		"eslint": "^8.13.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-tsdoc": "^0.2.16",
		"prettier": "^2.6.2",
		"prettier-plugin-jsdoc": "^0.3.36",
		"siroc": "^0.16.0",
		"size-limit": "^7.0.8",
		"standard-version": "^9.3.2",
		"typescript": "^4.6.3",
		"vitest": "^0.9.3"
	},
	"engines": {
		"node": ">=12.7.0"
	},
	"publishConfig": {
		"access": "public"
	}
}
